<Window x:Class="ReaderApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReaderApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="175" Width="200" ResizeMode="NoResize">
    <Grid>
        <Button Content="Play" Name="playButton"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,55,0,0" Click="PlayButton_Click"/>
        <Button Content="Stop" Name="stopButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="100,55,0,0" Click="StopButton_Click"/>
        <Button Content="Setting" Name="settingButton"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="55,95,0,0" Click="SettingButton_Click"/>

    </Grid>
</Window>
